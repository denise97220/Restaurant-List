<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>

<div class="container">
    <form action="/restaurants/new" method="POST" class="row g-3">
        <div class="col-md-6 mt-2">
            <label for="name" class="form-label">餐廳名稱：</label>
            <input name="name" id="name" type="text" class="form-control" maxlength="20" placeholder="輕井澤 ..." required>
        </div>
        <div class="col-md-6 mt-2">
            <label for="rating" class="form-label">評分：</label>
            <input name="rating" id="rating" class="form-control" type="number" min="0" max="5" step="0.1" placeholder="4.5"
                required>
        </div>
        <div class="col-md-6 mt-2">
            <label for="category" class="form-label">類別：</label>
            <input name="category" id="category" type="text" maxlength="20" class="form-control"  placeholder="台灣美食 ..." required>
        </div>
        <div class="col-md-6 mt-2">
            <label for="phone" class="form-label">電話：</label>
            <input name="phone" id="phone" type="text" class="form-control" maxlength="15" placeholder="04-234 ..." required>
        </div>
        <div class="col-12 mt-2">
            <label for="inputAddress2" class="form-label">地址：</label>
            <input name="location" id="location" type="text" class="form-control" maxlength="30" placeholder="台中市公益路 ..." required>
        </div>
        <div class="col-12 mt-2">
            <label for="description" class="form-label">描述：</label>
            <input name="description" id="description" class="form-control"  type="text" maxlength="100" placeholder=" ..." required>
        </div>
        <div class="col-12 mt-2">
            <label for="image" class="form-label">圖片網址：</label>
            <input name="image" id="image" type="text" class="form-control"  maxlength="100" placeholder="https:// ..." required>
        </div>
        <div class="col-12 my-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>