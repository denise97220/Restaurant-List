<h1 class="mb-1 restaurant-show-title">修改餐廳</h1>

<div class="container">
    <div class="row">
        <div class="col-12">
            <form action="/restaurants/{{rest._id}}/edit" method="POST">
                <div class="row mb-2">
                    <div class="col-12">
                        <label for="name">餐廳名稱：</label>
                        <input name="name" id="name" type="text" maxlength="20" placeholder="輕井澤 ..." value="{{rest.name}}" required>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12">
                        <label for="category">類別：</label>
                        <input name="category" id="category" type="text" maxlength="20" placeholder="中東美食 ..." value="{{rest.category}}" required>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12">
                        <label for="rating">評分：</label>
                        <input name="rating" id="rating" type="number" min="0" max="5" step="0.1" placeholder="4.5" value="{{rest.rating}}"
                            required>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12">
                        <label for="location">地址：</label>
                        <input name="location" id="location" type="text" maxlength="30" placeholder="台中市公益路 ..." value="{{rest.location}}"
                            required>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12">
                        <label for="phone">電話：</label>
                        <input name="phone" id="phone" type="text" maxlength="15" placeholder="04-234 ..." value="{{rest.phone}}" required>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12">
                        <label for="description">描述：</label>
                        <input name="description" id="description" type="text" maxlength="100" placeholder=" ..." value="{{rest.description}}"
                            required>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12">
                        <label for="image">圖片網址：</label>
                        <input name="image" id="image" type="text" maxlength="100" placeholder="https:// ..." value="{{rest.image}}" required>
                    </div>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>