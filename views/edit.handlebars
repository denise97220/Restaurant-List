<h1 class="mb-1 restaurant-show-title">修改餐廳</h1>

<div class="container">
    <form action="/restaurants/{{rest._id}}/edit" method="POST" class="row g-3">
        <div class="col-md-6 mt-2">
            <label for="name" class="form-label">餐廳名稱：</label>
            <input name="name" id="name" type="text" class="form-control" maxlength="20" placeholder="輕井澤 ..." value="{{rest.name}}" required>
        </div>
        <div class="col-md-6 mt-2">
            <label for="rating" class="form-label">評分：</label>
            <input name="rating" id="rating" class="form-control" type="number" min="0" max="5" step="0.1"
                placeholder="4.5" value="{{rest.rating}}" required>
        </div>
        <div class="col-md-6 mt-2">
            <label for="category" class="form-label">類別：</label>
            <input name="category" id="category" type="text" maxlength="20" class="form-control" placeholder="台灣美食 ..." value="{{rest.category}}"
                required>
        </div>
        <div class="col-md-6 mt-2">
            <label for="phone" class="form-label">電話：</label>
            <input name="phone" id="phone" type="text" class="form-control" maxlength="15" placeholder="04-234 ..." value="{{rest.phone}}"
                required>
        </div>
        <div class="col-12 mt-2">
            <label for="inputAddress2" class="form-label">地址：</label>
            <input name="location" id="location" type="text" class="form-control" maxlength="30"
                placeholder="台中市公益路 ..." value="{{rest.location}}" required>
        </div>
        <div class="col-12 mt-2">
            <label for="description" class="form-label">描述：</label>
            <input name="description" id="description" class="form-control" type="text" maxlength="100"
                placeholder=" ..." value="{{rest.description}}" required>
        </div>
        <div class="col-12 mt-2">
            <label for="image" class="form-label">圖片網址：</label>
            <input name="image" id="image" type="text" class="form-control" maxlength="100" placeholder="https:// ..." value="{{rest.image}}"
                required>
        </div>
        <div class="col-12 my-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
